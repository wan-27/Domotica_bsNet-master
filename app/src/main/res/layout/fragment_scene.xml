        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonReloadScn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/reload"
                android:layout_gravity="right"
                android:textColor="@color/list_item_title" />

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <ListView
            android:id="@+id/scene_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#cfd8dc"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="true"
            tools:listitem="@layout/list_scene" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <Button
            android:id="@+id/addScene"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color_with_state"
            android:text="@string/addScene"
            android:textColor="@color/list_item_title" />
    </LinearLayout>

